use vk;
create table storehouses_products (
	id BIGINT unsigned not null primary key auto_increment,
	value BIGINT unsigned not null
);

insert into storehouses_products VALUES
(1, 0), 
(2, 500), 
(3, 100),
(4, 0), 
(5, 1000), 
(6, 1234)
;

alter table storehouses_products 
add one INT not null default 1
;

update storehouses_products 
set one = '0'
where value = '0';

select * from storehouses_products order by one desc, value;